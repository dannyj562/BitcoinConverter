<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="converter.android.com.bitcoinconverter.CryptoCalculationActivity"
    android:background="@color/light_gray">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cryptoMarketValueTextView"
        android:textSize="40dp"
        android:background="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calculationInfoTextView"
        android:layout_centerInParent="true"
        android:textSize="40dp"
        android:background="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calculationTextView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:textSize="40dp"
        android:background="@color/turquoise_green"/>


</RelativeLayout>
